{
  "name": "salesforce-deployment-guard",
  "displayName": "salesforce-deployment-guard",
  "description": "Used to prevent code overright",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "salesforce-deployment-guard.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "salesforce-deployment-guard.listSFCommands",
        "title": "List Salesforce Commands"
      },
      {
        "command": "salesforce-deployment-guard.retrieve",
        "title": "SF Guard: Retrieve from Org",
        "icon": "$(cloud-download)"
      },
      {
        "command": "salesforce-deployment-guard.safeDeploy",
        "title": "SF Guard: Safe Deploy to Org",
        "icon": "$(shield)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "salesforce-deployment-guard.retrieve",
          "when": "resourceExtname == .cls || resourceExtname == .trigger || resourceExtname == .apex || resourceExtname == .html || resourceExtname == .js || resourceExtname == .css",
          "group": "salesforce@1"
        },
        {
          "command": "salesforce-deployment-guard.safeDeploy",
          "when": "resourceExtname == .cls || resourceExtname == .trigger || resourceExtname == .apex || resourceExtname == .html || resourceExtname == .js || resourceExtname == .css",
          "group": "salesforce@2"
        }
      ],
      "editor/context": [
        {
          "command": "salesforce-deployment-guard.retrieve",
          "when": "resourceExtname == .cls || resourceExtname == .trigger || resourceExtname == .apex || resourceExtname == .html || resourceExtname == .js || resourceExtname == .css",
          "group": "salesforce@1"
        },
        {
          "command": "salesforce-deployment-guard.safeDeploy",
          "when": "resourceExtname == .cls || resourceExtname == .trigger || resourceExtname == .apex || resourceExtname == .html || resourceExtname == .js || resourceExtname == .css",
          "group": "salesforce@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
